<style>
  .nav-mustard {
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(255, 245, 200, 0.35) 0%, transparent 45%),
      radial-gradient(circle at 80% 70%, rgba(250, 235, 180, 0.28) 0%, transparent 48%),
      radial-gradient(circle at 50% 50%, rgba(255, 250, 210, 0.22) 0%, transparent 55%),
      radial-gradient(circle at 90% 10%, rgba(255, 200, 220, 0.12) 0%, transparent 42%);
  }
  
  .nav-mustard::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    opacity: 0.25;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='2' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    background-size: 200px 200px;
  }
  
  /* Mobile menu open state */
  .mobile-menu-open #mobile-menu {
    opacity: 1;
    visibility: visible;
    max-height: 500px;
  }
  
  /* Hamburger to X animation */
  .mobile-menu-open .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }
  
  .mobile-menu-open .hamburger-line:nth-child(2) {
    opacity: 0;
  }
  
  .mobile-menu-open .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }
</style>

<script>
  (function() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const nav = document.querySelector('.nav-mustard');
    const navLinks = document.querySelectorAll('[data-nav-link]');
    
    if (!toggle || !menu || !nav) return;
    
    function openMenu() {
      nav.classList.add('mobile-menu-open');
      toggle.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }
    
    function closeMenu() {
      nav.classList.remove('mobile-menu-open');
      toggle.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    }
    
    function toggleMenu() {
      if (nav.classList.contains('mobile-menu-open')) {
        closeMenu();
      } else {
        openMenu();
      }
    }
    
    toggle.addEventListener('click', toggleMenu);
    
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        setTimeout(closeMenu, 100);
      });
    });
    
    document.addEventListener('click', (e) => {
      if (nav.classList.contains('mobile-menu-open') && 
          !nav.contains(e.target) && 
          !menu.contains(e.target)) {
        closeMenu();
      }
    });
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && nav.classList.contains('mobile-menu-open')) {
        closeMenu();
      }
    });
    
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768 && nav.classList.contains('mobile-menu-open')) {
        closeMenu();
      }
    });
  })();
</script>
