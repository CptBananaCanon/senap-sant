<section class="relative py-16 md:py-24 px-4 md:px-6">
  <div class="max-w-[1000px] mx-auto">
    <div class="mb-6 md:mb-8 w-full text-center">
      <h1 class="text-neutral-900 leading-tight w-full font-normal" id="hero-title" style="font-size: clamp(2rem, 6vw, 5.75rem); font-weight: 400;">
        Mathilda <span class="text-[#dc2626]">❤</span> Nadim = Sant!
      </h1>
    </div>
    
    <div class="mb-8 md:mb-10 w-full text-center">
      <p class="text-xl md:text-2xl lg:text-3xl text-neutral-800 font-light tracking-wide">
        Helsingborg — 19 september 2026
      </p>
    </div>
    
    <div class="mb-10 md:mb-12 w-full">
      <img 
        src="/images/hero.jpg" 
        alt="Mathilda och Nadim"
        class="w-full max-w-full h-auto rounded-lg shadow-lg"
        id="hero-image"
      />
    </div>
  </div>
</section>

<script>
  function matchTitleWidth() {
    const image = document.getElementById('hero-image');
    const title = document.getElementById('hero-title');
    
    if (image && title) {
      const imageWidth = image.offsetWidth;
      const currentTitleWidth = title.offsetWidth;
      const currentFontSize = parseFloat(getComputedStyle(title).fontSize);
      
      if (currentTitleWidth > 0 && imageWidth > 0) {
        const scale = imageWidth / currentTitleWidth;
        const newFontSize = currentFontSize * scale;
        title.style.fontSize = `${newFontSize}px`;
      }
    }
  }
  
  if (typeof window !== 'undefined') {
    window.addEventListener('load', matchTitleWidth);
    window.addEventListener('resize', matchTitleWidth);
    
    const image = document.getElementById('hero-image');
    if (image) {
      image.addEventListener('load', matchTitleWidth);
    }
  }
</script>
